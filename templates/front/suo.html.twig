{% extends 'base.html.twig' %}

{% block content %}

    {% block body_header %}
        <header class="masthead text-center text-white d-flex">
            <div class="container my-auto">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <h1 class="text-uppercase">
                            <strong>{{ dog.name }}</strong>
                        </h1>
                        <hr>
                    </div>
                    <div class="col-lg-8 mx-auto">
                        <p class="text-faded mb-5">{{ dog.nickname }}</p>
                    </div>
                </div>
            </div>
        </header>

    {% endblock %}

    <section class="bg-dark" id="dartas">

        <div id="container" >
            <div class="col-lg-10 mx-auto text-center">
                <div id="image"class="popup-gallery" style=" padding: 20px">
                    <a  href="{{ vich_uploader_asset(dog, 'imageFile') }}">
                        <img src="{{ vich_uploader_asset(dog, 'imageFile') }}" alt="" style = "max-width:30%; max-height:30%; margin: 2px; padding: 15px; " align="left" ;>
                    </a>

                    <div class="text-white " style=" white-space:normal; padding: 20px">
                        <h4>{{ dog.name }}</h4>
                        <p>{{ dog.about }}</p>
                    </div>
                </div>
            </div>
    </section>

    <!-- pedrigree lenteleeeee-->

    {% if dog.pedigree is not null %}
    <section class = "bg-light" id = "lentele">
        <center>
            <div class ="text-faded"> <h2>Pedigree</h2></div>
            {{ dog.pedigree | raw }}
        </center>
    </section>
    {% endif %}

{% endblock %}
