{% extends'base.html.twig' %}

{% block content %}

    {% block body_header %}

        <header class="masthead text-center text-white d-flex">
            <div class="container my-auto">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <h1 class="text-uppercase">
                            <strong>PARODOS</strong>
                        </h1>
                        <hr>
                    </div>
                    <div class="col-lg-8 mx-auto">
                        <p class="text-faded mb-5">Parod≈≥ rezultatai</p>
                    </div>
                </div>
            </div>
        </header>

    {% endblock %}

    {% block show_results %}

        {% for show in shows %}
            <section class="bg-dark" id="parodos">
                <div id="container" >
                    <div id="image"class="popup-gallery clearfix" style=" padding: 20px">
                        <a href="{{ vich_uploader_asset(show, 'imageFile') }}">
                            <img src="{{ vich_uploader_asset(show, 'imageFile') }}" alt="" style = "max-height:250px; margin: 20px; " align="left" ;>
                        </a>
                        <div class="text-white " style=" white-space:normal; padding: 20px">
                            <h4>{{ show.title }}</h4>
                            <p>{{ show.text }}</p>
                        </div>
                    </div>
                </div>
            </section>

            {% if not loop.last %}
            <hr>
            {% endif %}
        {% endfor %}


        <div class="text-center">
            {{ pagerfanta(shows, 'default_translated') }}
        </div>

    {% endblock %}

{% endblock %}
